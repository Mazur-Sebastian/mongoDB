html
    head
        title=title
        link(
        href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
        rel='stylesheet'
        )
    body
        div.container
            .page-header
                h1 My profile

            if errors 
                each error in errors
                    .alert.alert-danger
                        span #{ error.error }
            if saved 
                .alert.alert-success
                    span Your profile has been saved
            form.login-form.form-horizontal(method='post', role='form')
                input(name='_csrf'. type='hidden', value=csrfToken)
                .form-group
                    label.col-sm-4 First Name
                    .col-sm-8
                        input.form-control(
                            placeholder='Your first name',
                            required=true,
                            name='givenName',
                            type="text",
                            value=givenName)
                .form-group
                    label.col-sm-4 Last Name
                    .col-sm-8
                        input.form-control(
                            placeholder='Your last name',
                            required=true,
                            name='surname',
                            type="text",
                            value=surname)
                .form-group
                    label.col-sm-4 Street Adress
                    .col-sm-8
                        input.form-control(
                            placeholder='e.g. 123 Sunny Ave',
                            required=true,
                            name='streetAdress',
                            type="text",
                            value=streetAdress)
                .form-group
                    label.col-sm-4 City
                    .col-sm-8
                        input.form-control(
                            placeholder='e.g. City',
                            required=true,
                            name='city',
                            type="text",
                            value=city)
                .form-group
                    label.col-sm-4 State
                    .col-sm-8
                        input.form-control(
                            placeholder='e.g. CA',
                            required=true,
                            name='state',
                            type="text",
                            value=state)                              
                .form-group
                    label.col-sm-4 ZIP
                    .col-sm-8
                        input.form-control(
                            placeholder='e.g. 94116',
                            required=true,
                            name='zip',
                            type="text",
                            value=zip) 
                div.form-group
                    div.col-sm-offset-4.col-sm-8 
                        button.login.btn.btn-primary(type='submit') Save 
                .pull-right
                    a(href="/") Return to home page